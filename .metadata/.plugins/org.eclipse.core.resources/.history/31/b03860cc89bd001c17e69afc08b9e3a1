import javax.swing.JOptionPane;
public class c05ex11 {
	public static void main(String[] args) {
		// Programadora: Bianca Maria
		String numeroCheque = JOptionPane.showInputDialog(null,
				"Qual é o número do Cheque?:",
				"Calcular",				
     JOptionPane.QUESTION_MESSAGE);
		int numeroCheque1 = Integer.valueOf(numeroCheque).intValue();
		int banco = numeroCheque1/1000000;
		int agencia = numeroCheque1/1000 % 1000;
		int sequencial = numeroCheque1 % 1000;
	JOptionPane.showMessageDialog(null,
			"Número do banco: " +banco +"\nNúmero Agencia: " +agencia+"\nNúmero Sequncial: "+sequencial,
			"Calcular",
	JOptionPane.QUESTION_MESSAGE);
			
			
		
				
				
	}

}
