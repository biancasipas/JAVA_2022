import java.util.Scanner;

public class c08ex02s {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int nota, falta,contator1=0,contator2=0;
		for (int aux = 1; aux <= 5; aux++) {
			
				System.out.print("Qual sua nota do aluno: ");
				nota = teclado.nextInt();
				System.out.print("Falto aula: ");
				falta = teclado.nextInt();
				if(nota == -1) 
			    	break;
				if (nota >= 65 && falta <= 16) {
					System.out.println("ALUNO APROVADO");
					contator1++;
				} else {
					System.out.println("ALUNO REPROVADO");
					contator2++;
				}
				System.out.println("Aprovados: "+contator1);
				System.out.println("Reprovados: "+contator2);
		
		}
		teclado.close();
	}

}
