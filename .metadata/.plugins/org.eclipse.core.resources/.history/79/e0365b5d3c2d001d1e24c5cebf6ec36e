import java.util.Scanner;

public class c08ex01s {
	public static void main(String[] args) {
Scanner teclado = new Scanner(System.in);
double raio,aera;
do {
	System.out.println("CANCELAR COLOCAR NUMERO 0");
	System.out.print("Qual o valor de raio: ");
	raio = teclado.nextInt();
	aera = 3.1416*Math.pow(raio, 2);
	System.out.println(aera);
}while(raio != 0);
teclado.close();
	}
}
